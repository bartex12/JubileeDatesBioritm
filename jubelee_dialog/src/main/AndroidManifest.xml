<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.bartex.jubelee_dialog">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PersonsListActivity"
            android:label="Лучшие люди"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".TableActivity"
            android:label="Таблица юбилейных дат">
        </activity>
        <activity
            android:name=".TimeActivity"
            android:label="Число прожитых дней"
            android:windowSoftInputMode="stateVisible">
        </activity>
        <activity
            android:name=".NewActivity"
            android:label="Ввод персональных данных"
            android:windowSoftInputMode="stateVisible">
        </activity>
        <activity
            android:name=".BioritmActivity"
            android:label="Биоритмы"
            android:parentActivityName=".PersonsListActivity">
        </activity>
        <activity android:name=".PrefActivity">
        </activity>
        <activity
            android:name=".SeachActivity"
            android:label="Результаты поиска"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".JointActivity"
            android:label="Совместная дата">
        </activity>
        <activity
            android:name=".ListDialog"
            android:label="Выбор персоны"
            android:theme="@style/AppDialog">
        </activity>
        <activity
            android:name=".FindDatesActivity"
            android:label="Прожито на двоих "
            android:parentActivityName=".PersonsListActivity">
        </activity>
        <activity android:name=".ListDialog_CheckBox">
        </activity>
        <activity android:name=".CheckedActivity">
        </activity>
    </application>

</manifest>